<%= form_with url: "/", method: :get do |form| %>
    <%= form.hidden_field :passenger_number, value: params[:passenger_number] %>
    <%= form.collection_radio_buttons :flight_id, @available_flights, :id, :flight_number %>
    <%= form.submit "Select" %>
<% end %>
